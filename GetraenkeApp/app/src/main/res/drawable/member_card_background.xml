<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/club_surface" />
            <stroke 
                android:width="2dp" 
                android:color="@color/club_primary" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Normal state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/club_surface" />
            <stroke 
                android:width="2dp" 
                android:color="@color/club_border" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>