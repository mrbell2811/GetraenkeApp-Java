<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- CRITICAL: Always-on screen requires WAKE_LOCK permission -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <!-- CRITICAL: File export requires WRITE_EXTERNAL_STORAGE on API < 29 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />
    
    <!-- Network state for email export functionality -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Internet permission for WebView local file access -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".GetraenkeApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GetraenkeApp"
        tools:targetApi="31">
        
        <!-- File Provider for sharing exports -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        
        <!-- WebView Activity - React Frontend Integration -->
        <activity
            android:name=".ui.webview.WebViewActivity"
            android:exported="true"
            android:screenOrientation="unspecified"
            android:theme="@style/Theme.GetraenkeApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Main Activity - Member Name Grid (Legacy) -->
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false"
            android:screenOrientation="unspecified"
            android:theme="@style/Theme.GetraenkeApp.NoActionBar" />
        
        <!-- Beverage Selection Activity -->
        <activity
            android:name=".ui.beverage.BeverageActivity"
            android:exported="false"
            android:screenOrientation="unspecified"
            android:theme="@style/Theme.GetraenkeApp" />
        
        <!-- Quantity Confirmation Activity -->
        <activity
            android:name=".ui.quantity.QuantityActivity"
            android:exported="false"
            android:screenOrientation="unspecified"
            android:theme="@style/Theme.GetraenkeApp" />
        
        <!-- Admin Panel Activity -->
        <activity
            android:name=".ui.admin.AdminActivity"
            android:exported="false"
            android:screenOrientation="unspecified"
            android:theme="@style/Theme.GetraenkeApp" />
        
        <!-- Member Management Activity -->
        <activity
            android:name=".ui.admin.MemberManagementActivity"
            android:exported="false"
            android:screenOrientation="unspecified"
            android:theme="@style/Theme.GetraenkeApp" />
        
        <!-- Beverage Management Activity -->
        <activity
            android:name=".ui.admin.BeverageManagementActivity"
            android:exported="false"
            android:screenOrientation="unspecified"
            android:theme="@style/Theme.GetraenkeApp" />
        
        <!-- Export Configuration Activity -->
        <activity
            android:name=".ui.admin.ExportConfigurationActivity"
            android:exported="false"
            android:screenOrientation="unspecified"
            android:theme="@style/Theme.GetraenkeApp" />
        
        <!-- User Statistics Activity -->
        <activity
            android:name=".ui.statistics.UserStatisticsActivity"
            android:exported="false"
            android:screenOrientation="unspecified"
            android:theme="@style/Theme.GetraenkeApp" />

        <!-- Consumption Overview Activity -->
        <activity
            android:name=".ui.overview.ConsumptionOverviewActivity"
            android:exported="false"
            android:screenOrientation="unspecified"
            android:theme="@style/Theme.GetraenkeApp" />
        
        <!-- Auto Backup Service -->
        <service
            android:name=".service.AutoBackupService"
            android:exported="false" />

    </application>

</manifest>