<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/club_background"
    android:padding="@dimen/padding_medium"
    tools:context=".ui.beverage.BeverageActivity">

    <!-- Header with Back Button and Title -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/buttonBack"
            style="@style/Widget.GetraenkeApp.Button.Admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:layout_marginStart="@dimen/margin_medium" />

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/beverage_title"
            android:textAppearance="@style/TextAppearance.GetraenkeApp.Headline"
            android:gravity="center"
            android:padding="@dimen/padding_medium" />

        <TextView
            android:id="@+id/textViewMemberName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.GetraenkeApp.Body"
            android:textStyle="bold"
            android:textColor="@color/club_primary"
            android:layout_marginEnd="@dimen/margin_medium"
            tools:text="Max Mustermann" />

    </LinearLayout>

    <!-- Beverage Grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewBeverages"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_large"
        android:paddingHorizontal="@dimen/padding_small"
        android:paddingVertical="@dimen/padding_medium"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/statisticsLayout"
        tools:listitem="@layout/item_beverage_button"
        tools:itemCount="9" />

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/recyclerViewBeverages"
        app:layout_constraintBottom_toBottomOf="@id/recyclerViewBeverages"
        app:layout_constraintStart_toStartOf="@id/recyclerViewBeverages"
        app:layout_constraintEnd_toEndOf="@id/recyclerViewBeverages" />

    <!-- Empty State Message -->
    <TextView
        android:id="@+id/textViewEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keine Getränke verfügbar.\nBitte Admin kontaktieren."
        android:textAppearance="@style/TextAppearance.GetraenkeApp.Body"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/recyclerViewBeverages"
        app:layout_constraintBottom_toBottomOf="@id/recyclerViewBeverages"
        app:layout_constraintStart_toStartOf="@id/recyclerViewBeverages"
        app:layout_constraintEnd_toEndOf="@id/recyclerViewBeverages" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/statisticsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/club_secondary_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/statisticsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deine aktuelle Abrechnung"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/totalConsumptionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Gesamtverbrauch:"
            app:layout_constraintTop_toBottomOf="@id/statisticsTitle"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/totalConsumptionValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="42"
            app:layout_constraintTop_toTopOf="@id/totalConsumptionLabel"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/totalSpentLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Gesamtkosten:"
            app:layout_constraintTop_toBottomOf="@id/totalConsumptionLabel"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/totalSpentValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="€ 21.00"
            app:layout_constraintTop_toTopOf="@id/totalSpentLabel"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewStatistics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/totalSpentLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>