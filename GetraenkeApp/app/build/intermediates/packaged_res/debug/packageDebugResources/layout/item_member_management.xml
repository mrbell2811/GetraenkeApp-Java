<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:rippleColor="@color/club_primary_light">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_standard">

        <!-- Member Name -->
        <TextView
            android:id="@+id/textViewMemberName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/club_text_primary"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/buttonEdit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Max Mustermann" />

        <!-- Member ID -->
        <TextView
            android:id="@+id/textViewMemberId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:textColor="@color/club_text_secondary"
            android:textSize="@dimen/text_size_caption"
            app:layout_constraintEnd_toStartOf="@id/buttonEdit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewMemberName"
            tools:text="ID: 1" />

        <!-- Creation Date -->
        <TextView
            android:id="@+id/textViewCreatedAt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:textColor="@color/club_text_secondary"
            android:textSize="@dimen/text_size_caption"
            app:layout_constraintEnd_toStartOf="@id/buttonEdit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewMemberId"
            tools:text="Erstellt: 19.08.2025 14:30" />

        <!-- Grid Position (optional) -->
        <TextView
            android:id="@+id/textViewGridPosition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:textColor="@color/club_text_secondary"
            android:textSize="@dimen/text_size_caption"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@id/buttonEdit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewCreatedAt"
            tools:text="Position: 5"
            tools:visibility="visible" />

        <!-- Edit Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonEdit"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="@dimen/touch_target_size"
            android:layout_height="@dimen/touch_target_size"
            android:contentDescription="Bearbeiten"
            app:icon="@drawable/ic_edit"
            app:iconTint="@color/club_primary"
            app:layout_constraintEnd_toStartOf="@id/buttonDelete"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Delete Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonDelete"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="@dimen/touch_target_size"
            android:layout_height="@dimen/touch_target_size"
            android:contentDescription="LÃ¶schen"
            app:icon="@drawable/ic_delete"
            app:iconTint="@color/club_error"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>