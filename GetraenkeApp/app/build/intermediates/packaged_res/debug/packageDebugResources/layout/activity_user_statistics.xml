<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/club_background"
    android:padding="@dimen/padding_medium"
    tools:context=".ui.statistics.UserStatisticsActivity">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="@dimen/padding_large"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold"
            android:textColor="@color/club_on_primary"
            android:background="@drawable/club_gradient"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/margin_medium">

            <TextView
                android:id="@+id/textViewMemberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Member Name"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                android:textColor="@color/club_on_background"
                android:gravity="center" />

            <TextView
                android:id="@+id/textViewPeriodTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Konsum seit letztem Abschluss"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/club_muted_foreground"
                android:gravity="center"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <View
            android:layout_width="120dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_large"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium">

            <!-- Summary Statistics Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/margin_large"
                android:weightSum="3">

                <!-- Total Quantity Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/margin_small"
                    app:cardBackgroundColor="@color/club_primary"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/padding_medium">

                        <TextView
                            android:id="@+id/textViewTotalQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="@color/club_on_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Getränke"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/club_on_primary"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Total Spent Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="@dimen/margin_small"
                    app:cardBackgroundColor="@color/club_accent"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/padding_medium">

                        <TextView
                            android:id="@+id/textViewTotalSpent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00 €"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/club_on_accent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ausgaben"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/club_on_accent"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Transaction Count Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/margin_small"
                    app:cardBackgroundColor="@color/club_surface"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:strokeColor="@color/club_border"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/padding_medium">

                        <TextView
                            android:id="@+id/textViewTransactionCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="@color/club_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Käufe"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/club_on_surface"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Period Information -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_large"
                app:cardBackgroundColor="@color/club_surface"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/club_border"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/padding_large">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textViewPeriodStart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Seit: 01.08.2025"
                            android:textSize="@dimen/text_size_medium"
                            android:textColor="@color/club_on_surface"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Statistik wird nach monatlichem Abschluss zurückgesetzt"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/club_muted_foreground"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/textViewFavoriteLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Favorit:"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/club_muted_foreground" />

                        <TextView
                            android:id="@+id/textViewFavoriteBeverage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bier"
                            android:textSize="@dimen/text_size_medium"
                            android:textColor="@color/club_primary"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Beverage Breakdown Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/club_surface"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/club_border"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_large">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Getränke-Aufschlüsselung"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        android:textColor="@color/club_primary"
                        android:layout_marginBottom="@dimen/margin_medium" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewBeverages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                    <TextView
                        android:id="@+id/textViewNoData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Noch keine Getränke konsumiert"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/club_muted_foreground"
                        android:textStyle="italic"
                        android:gravity="center"
                        android:padding="@dimen/padding_large"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>