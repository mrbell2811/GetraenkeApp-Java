<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include database for backup -->
        <include domain="database" path="getraenke_database.db" />
        <!-- Exclude sensitive admin data -->
        <exclude domain="sharedpref" path="admin_preferences.xml" />
    </cloud-backup>
    
    <device-transfer>
        <!-- Include all app data for device transfer -->
        <include domain="database" />
        <include domain="sharedpref" />
        <!-- Exclude cache -->
        <exclude domain="cache" />
    </device-transfer>
</data-extraction-rules>